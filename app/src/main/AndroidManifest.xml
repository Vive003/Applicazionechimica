        android:supportsRtl="true"
        android:theme="@style/Theme.Applicazionechimica">
        <activity
            android:name=".ElementiAnnoStoricoActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".ListaAggiungiQtaActivity"
            android:screenOrientation="portrait"
